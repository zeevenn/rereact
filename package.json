{
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "build": "pnpm -r --parallel build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint --cache .",
    "prepublishOnly": "pnpm build",
    "docs": "pnpm -C docs",
    "docs:dev": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build",
    "example": "pnpm -C example",
    "example:dev": "pnpm -C example dev",
    "example:build": "pnpm -C example build",
    "test": "vitest",
    "typecheck": "pnpm -r --parallel typecheck",
    "prepare": "simple-git-hooks",
    "release": "changeset publish",
    "create:pkg": "tsx scripts/createPackage.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:cli",
    "@changesets/changelog-github": "catalog:cli",
    "@changesets/cli": "catalog:cli",
    "@inquirer/prompts": "catalog:cli",
    "@types/node": "catalog:types",
    "eslint": "catalog:cli",
    "lint-staged": "catalog:cli",
    "simple-git-hooks": "catalog:cli",
    "tsdown": "catalog:cli",
    "tsx": "catalog:cli",
    "typescript": "catalog:cli",
    "vitest": "catalog:testing"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
